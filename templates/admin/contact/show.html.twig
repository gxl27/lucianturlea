{% extends 'base.html.twig' %}

{% block title %}Contact{% endblock %}

{% block body %}
<div class="container">
    <h1>Contact</h1>

    <table class="table">
        <tbody>
            <tr>
                {% if contact.customer %}
                <th>Customer name</th>
                <td>
                    <a href="{{ path('customer_show', {'id': contact.customer.id}) }}"> {{ contact.customer.name }}</a>
                </td>
                {% else %}
                <th></th>
                <td></td>
                {% endif %}
            </tr>
            <tr>
                <th>Id</th>
                <td>{{ contact.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ contact.name }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ contact.email }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ contact.title }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ contact.content }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ contact.createdAt ? contact.createdAt|date('d-M-Y H:i') : '' }}</td>
            </tr>
            <tr>
                <th>Info</th>
                <td>{{ contact.info }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ contact.statusFormated }}</td>
            </tr>
            <tr>
                <th>Telephone</th>
                <td>{{ contact.telephone }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('contact_index') }}">back to list</a>

    <a href="{{ path('contact_edit', {'id': contact.id}) }}">edit</a>

    {{ include('admin/contact/_delete_form.html.twig') }}
</div>
{% endblock %}
