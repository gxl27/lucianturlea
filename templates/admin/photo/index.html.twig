{% extends 'base.html.twig' %}

{% block title %}Photo index{% endblock %}

{% block body %}
<div class="container">
    <h1>Photo index</h1>
    <div class="table-wrapper">
        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Level</th>
                    <th>Project</th>
                    <th>UpdatedAt</th>
                    <th>Document</th>
                    <th>actions</th>
                </tr>
            </thead>
            <tbody>
            {% for photo in photos %}
                <tr>
                    <td>{{ photo.id }}</td>
                    <td>{{ photo.name }}</td>
                    <td>{{ photo.level }}</td>
                    <td>{{ photo.project.name }}</td>
                    <td>{{ photo.updatedAt ? photo.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                    <td>{{ photo.document }}</td>
                    <td>
                        <a href="{{ path('photo_show', {'id': photo.id}) }}">show</a>
                        <a href="{{ path('photo_edit', {'id': photo.id}) }}">edit</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

</div>
{% endblock %}
