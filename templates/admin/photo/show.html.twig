{% extends 'base.html.twig' %}

{% block title %}Photo{% endblock %}

{% block body %}
<div class="container">
    <h1>Photo</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ photo.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ photo.name }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ photo.updatedAt ? photo.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Document</th>
                <td>{{ photo.document }}</td>
            </tr>
            <tr>
                <th>Level</th>
                <td>{{ photo.level }}</td>
            </tr>
            <tr>
                <th>Details</th>
                <td>{{ photo.details }}</td>
            </tr>
        </tbody>
    </table>
    <img src="{{ vich_uploader_asset(photo, 'projectImages') | imagine_filter('carousel') }} " alt="project-{{ photo.id }}">             

    <a href="{{ path('photo_index') }}">back to list</a>

    <a href="{{ path('photo_edit', {'id': photo.id}) }}">edit</a>

    {{ include('admin/photo/_delete_form.html.twig') }}
</div>
{% endblock %}
