{% extends 'base.html.twig' %}

{% block title %}Technology{% endblock %}

{% block body %}
    <h1>Technology</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ technology.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ technology.name }}</td>
            </tr>
           
            <tr>
                <th>Version</th>
                <td>{{ technology.version }}</td>
            </tr>
             <tr>
                <th>document</th>
                <td>{{ technology.document }}</td>
            </tr>
             <tr>
                <th>photo</th>
                <td>
                    {% if technology.document %}
                        <img src=" {{ vich_uploader_asset(technology) }} " alt="project-{{ technology.id }}" style='max-width:45px'>         
                    {% endif %}
                </td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('technology_index') }}">back to list</a>

    <a href="{{ path('technology_edit', {'id': technology.id}) }}">edit</a>

    {{ include('admin/technology/_delete_form.html.twig') }}
{% endblock %}
