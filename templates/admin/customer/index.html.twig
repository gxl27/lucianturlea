{% extends 'base.html.twig' %}

{% block title %}Customer index{% endblock %}

{% block body %}
<div class="container">
    <h1>Customer index</h1>
    <div>
        <a href="{{ path('customer_index') }}" style='display:flex;gap:20px'>{{ customers|length }} Customers: <span style='color:#b7f598'>intial: {{ customersInitial|length }} </span> | <span style='color:#08c9ff'>read: {{ customersRead|length }} | </span><span style='color:#b8b8b8'>finished: {{ customersFinished|length }} | </span><span style='color:#f7ed28'>Interviewed: {{ customersInterviewed|length }}</span></a>
    </div>
    <div class="table-wrapper">
        <table class="table">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Name</th>
                    <th>Rate</th>
                    <th>Status</th>
                    <th>State</th>
                    <th>Telephone</th>
                    <th>Info</th>
                    <th>Email</th>
                    <th>Platform</th>
                    <th>CreatedAt</th>
                    <th>Salary</th>
                    <th>Location</th>
                    <th>Issues</th>
                    <th>actions</th>
                </tr>
            </thead>
            <tbody>
            {% for customer in customers %}
                <tr>
                    <td>{{ loop.index }}</td>
                    <td><a href="{{ customer.link }}">{{ customer.name }}</a></td>
                    <td>{{ customer.rate }}</td>
                    <td>{{ customer.statusFormated }}</td>
                    <td>{{ customer.stateFormated }}</td>
                    <td>{{ customer.telephone }}</td>
                    <td>{{ customer.info }}</td>
                    <td>{{ customer.email }}</td>
                    <td>{{ customer.platform }}</td>
                    <td>{{ customer.createdAt ? customer.createdAt|date('d-M-Y H:i') : '' }}</td>
                    <td>{{ customer.salary }}</td>
                    <td>{{ customer.location }}</td>
                    <td>{{ customer.issues }}</td>
                    <td>
                        <a href="{{ path('customer_show', {'id': customer.id}) }}">show</a>
                        <a href="{{ path('customer_edit', {'id': customer.id}) }}">edit</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="14">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
    <a href="{{ path('customer_new') }}">Create new</a>
</div>
{% endblock %}
