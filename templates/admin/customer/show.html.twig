{% extends 'base.html.twig' %}

{% block title %}Customer{% endblock %}

{% block body %}
<div class="container">
    <h1>Customer</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ customer.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td><a href="{{ customer.link }}">{{ customer.name }}</a></td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ customer.email }}</td>
            </tr>
            <tr>
                <th>Telephone</th>
                <td>{{ customer.telephone }}</td>
            </tr>
            <tr>
                <th>Platform</th>
                <td>{{ customer.platform }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ customer.createdAt ? customer.createdAt|date('d-M-Y H:i') : '' }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ customer.statusFormated }}</td>
            </tr>
            <tr>
                <th>Salary</th>
                <td>{{ customer.salary }}</td>
            </tr>
            <tr>
                <th>Location</th>
                <td>{{ customer.location }}</td>
            </tr>
            <tr>
                <th>State</th>
                <td>{{ customer.stateFormated }}</td>
            </tr>
            <tr>
                <th>Info</th>
                <td>{{ customer.info }}</td>
            </tr>
            <tr>
                <th>Rate</th>
                <td>{{ customer.rate }}</td>
            </tr>
            <tr>
                <th>Issues</th>
                <td>{{ customer.issues }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('customer_index') }}">back to list</a>

    <a href="{{ path('customer_edit', {'id': customer.id}) }}">edit</a>

    {{ include('admin/customer/_delete_form.html.twig') }}
</div>
{% endblock %}
