{% extends 'base.html.twig' %}

{% block title %}Project{% endblock %}

{% block body %}
    <h1>Project</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ project.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ project.name }}</td>
            </tr>
            <tr>
                <th>Link</th>
                <td>{{ project.link }}</td>
            </tr>
            <tr>
                <th>Subtitle</th>
                <td>{{ project.subtitle }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ project.status ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Public</th>
                <td>{{ project.public ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Production</th>
                <td>{{ project.production ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Framework</th>
                <td>{{ project.framework }}</td>
            </tr>
            <tr>
                <th>Github</th>
                <td>{{ project.github }}</td>
            </tr>
            <tr>
                <th>Level</th>
                <td>{{ project.level }}</td>
            </tr>
        </tbody>
    </table>

    <div>
        Adauga fotografie
        {{ form_start(form) }}
        {{ form_widget(form) }}
            <button>Adauga fisier</button>
        {{ form_end(form) }}
    </div>

    <a href="{{ path('project_index') }}">back to list</a>

    <a href="{{ path('project_edit', {'id': project.id}) }}">edit</a>

    {{ include('admin/project/_delete_form.html.twig') }}
{% endblock %}
